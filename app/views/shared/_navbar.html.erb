    <% end %>

    <!-- Text link -->
    <%= link_to "Manage my events", myevents_events_path(@event), class: "navbar-wagon-item navbar-wagon-link"%>

    <!-- Notification link-->
    <a href="" class="navbar-wagon-item navbar-wagon-link">
